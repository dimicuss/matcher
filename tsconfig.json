{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["esnext"],
    "module": "node16",
    "target": "es2022",
    
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  }
}
